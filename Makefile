.PHONY: help
help: ## help information about make commands
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}'

.PHONY: start
start: ## start auth_server & postgres & redis
	docker-compose up -d

.PHONY: stop
stop: ## stop auth_server & postgres & redis
	docker stop postgres redis auth_server